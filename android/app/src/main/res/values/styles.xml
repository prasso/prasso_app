<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/appThemeColor</item>
        <item name="colorPrimaryDark">@color/appThemeDarkColor</item>
        <item name="colorAccent">@color/appThemeLightColor</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColorHint">@color/light_grey</item>
        <item name="android:textColorHighlight">@color/appThemeColor</item>

        //added attributes
        <item name="android:colorControlNormal">@color/appThemeColor</item>
        <item name="android:colorControlActivated">@color/appThemeColor</item>
        <item name="android:colorControlHighlight">@color/appThemeColor</item>

    </style>

    <style name="TextInputLayoutError" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="ShapeAppearance.App.CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="NoToolBarTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/appThemeColor</item>
        <item name="colorPrimaryDark">@color/appThemeColor</item>
        <item name="colorAccent">@color/appSecondaryThemeColor</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="ThemeFontRegular">
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
        <item name="fontFamily">@font/proxima_nova_regular</item>
    </style>

    <style name="ThemeFontBold">
        <item name="android:fontFamily">@font/proxima_nova_bold</item>
        <item name="fontFamily">@font/proxima_nova_bold</item>
    </style>

    <style name="ThemeFontLight">
        <item name="android:fontFamily">@font/proxima_nova_light</item>
        <item name="fontFamily">@font/proxima_nova_light</item>
    </style>
</resources>